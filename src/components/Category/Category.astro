---
import { getLocaleFromUrl } from "@js/localeUtils";
import { categorify, slugify } from "@js/textUtils";

import { getLocalizedRoute } from "@/js/translationUtils";

interface Props {
	category: string;
	class?: string;
}

const { category, class: className } = Astro.props as Props;

const currLocale = getLocaleFromUrl(Astro.url);
---

<a
	href={getLocalizedRoute(currLocale, `/categories/${slugify(category)}/`)}
	class={`main-text-gradient font-medium ${className}`}
>
	{categorify(category)}
</a>
